<div class="container" style="margin-top: 100px ;">
    <div class="row">
        <div class="col-6 offset-3">
            <h2>Agregar Novedades</h2>
            <form action="/admin/novedades/agregar" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group">
                    <textarea name="subtitulo" class="form-control" placeholder="Subtitulo"></textarea>
                </div>
                 <div class="form-group">
                    <textarea name="cuerpo" class="form-control" placeholder="Cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            {{message}}
            {{/if}}
        </div>
    </div>
</div>